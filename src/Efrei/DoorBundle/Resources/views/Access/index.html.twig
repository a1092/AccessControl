{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Access list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Fromdate</th>
                <th>Todate</th>
                <th>Fromtime</th>
                <th>Totime</th>
                <th>Active</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('access_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{% if entity.fromdate %}{{ entity.fromdate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.todate %}{{ entity.todate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.fromtime }}</td>
                <td>{{ entity.totime }}</td>
                <td>{{ entity.active }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('access_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('access_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('access_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}

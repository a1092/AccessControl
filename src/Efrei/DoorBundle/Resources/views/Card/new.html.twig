{% extends '::base.html.twig' %}

{% block body -%}
   <form {{ form_enctype(form) }} action="{{ path('card_create', {id: entity.id}) }}" method="POST" class="form-horizontal" role="form">
	
		<div class="row">
			<div class="col-md-8">
				<h1>Modification d'une carte</h1>
			</div>
			<div class="col-md-4 text-right">
				<a class="btn btn-danger" href="{{ path('card') }}">Retourner à la liste</a>
				<input type="submit" class="btn btn-success" value="Enregistrer" class="button" />
			</div>
		</div>
		
		<div style="margin-top: 40px;">
			<div class="form-group">
				<label for="inputEmail3" class="col-sm-2 control-label">{{ form_label(form.lastname, "Nom") }}</label>
				{{ form_errors(form.lastname) }}
				<div class="col-sm-10">
				{{ form_widget(form.lastname) }}
				</div>
			</div>
			
			<div class="form-group">
				<label for="inputEmail3" class="col-sm-2 control-label">{{ form_label(form.firstname, "Prénom") }}</label>
				{{ form_errors(form.firstname) }}
				<div class="col-sm-10">
				{{ form_widget(form.firstname) }}
				</div>
			</div>
			
			<div class="form-group">
				<label for="inputEmail3" class="col-sm-2 control-label">{{ form_label(form.lastname, "Carte") }}</label>
				{{ form_errors(form.cardcode) }}
				{{ form_errors(form.facilitycode) }}
				<div class="col-sm-8">
				{{ form_widget(form.cardcode) }}
				</div>
				<div class="col-sm-2">
				{{ form_widget(form.facilitycode) }}
				</div>
			</div>
			
			<div class="form-group">
				<label for="inputEmail3" class="col-sm-2 control-label">{{ form_label(form.type, "Type") }}</label>
				{{ form_errors(form.type) }}
				<div class="col-sm-10">
				{{ form_widget(form.type) }}
				</div>
			</div>
			
			<div class="form-group">
				<label for="inputEmail3" class="col-sm-2 control-label">{{ form_label(form.studentid, "Etudiant ID") }}</label>
				{{ form_errors(form.studentid) }}
				<div class="col-sm-10">
				{{ form_widget(form.studentid) }}
				</div>
			</div>
			
			<div class="form-group">
				<label for="inputEmail3" class="col-sm-2 control-label">{{ form_label(form.promotion, "Promotion") }}</label>
				{{ form_errors(form.promotion) }}
				<div class="col-sm-10">
				{{ form_widget(form.promotion) }}
				</div>
			</div>
			
			<div class="form-group">
				<label for="inputEmail3" class="col-sm-2 control-label">{{ form_label(form.description, "Description") }}</label>
				{{ form_errors(form.description) }}
				<div class="col-sm-10">
				{{ form_widget(form.description) }}
				</div>
			</div>
		</div>
		
		
		{{ form_rest(form) }}
									
		</div>
	</form>
{% endblock %}

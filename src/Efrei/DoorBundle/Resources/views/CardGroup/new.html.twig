{% extends '::base.html.twig' %}

{% block body -%}
    <form {{ form_enctype(form) }} action="{{ path('group_create', {id: entity.id}) }}" method="POST" class="form-horizontal" role="form">
	
		<div class="row">
			<div class="col-md-8">
				<h1>Nouveau groupe</h1>
			</div>
			<div class="col-md-4 text-right">
				<a class="btn btn-danger" href="{{ path('group') }}">Retourner à la liste</a>
				<input type="submit" class="btn btn-success" value="Enregistrer" class="button" />
			</div>
		</div>
		
		<div style="margin-top: 40px;">
			
			{{ form_errors(form) }}
			
			<div class="form-group">
				<label for="inputEmail3" class="col-sm-2 control-label">{{ form_label(form.name, "Libellé") }}</label>
				{{ form_errors(form.name) }}
				<div class="col-sm-10">
				{{ form_widget(form.name) }}
				</div>
			</div>
			
			<div class="form-group">
				<label for="inputEmail3" class="col-sm-2 control-label">{{ form_label(form.description, "Description") }}</label>
				{{ form_errors(form.description) }}
				<div class="col-sm-10">
				{{ form_widget(form.description) }}
				</div>
			</div>
			
			<div class="form-group">
				<label for="inputEmail3" class="col-sm-2 control-label">{{ form_label(form.door, "Porte") }}</label>
				{{ form_errors(form.door) }}
				<div class="col-sm-10">
				{{ form_widget(form.door) }}
				</div>
			</div>
			
			<div class="form-group">
				<label for="inputEmail3" class="col-sm-2 control-label">{{ form_label(form.users, "Administrateurs") }}</label>
				{{ form_errors(form.users) }}
				<div class="col-sm-10">
				{{ form_widget(form.users) }}
				</div>
			</div>
		</div>
		
		
		{{ form_rest(form) }}
									
		</div>
	</form>
		
{% endblock %}
